        <body>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>

            <script>
                // Initialize GSAP and ScrollTrigger
                gsap.registerPlugin(ScrollTrigger);

                // Wait for DOM to be fully loaded
                document.addEventListener('DOMContentLoaded', function () {
                    // Subtle parallax effect for program images
                    const programImages = document.querySelectorAll('.program-image img');
                    programImages.forEach(img => {
                        gsap.fromTo(img,
                            { y: -20 },
                            {
                                y: 20,
                                scrollTrigger: {
                                    trigger: img.parentElement,
                                    start: "top bottom",
                                    end: "bottom top",
                                    scrub: 1.5, // Smooth scrubbing effect
                                    toggleActions: "play none none reverse"
                                }
                            }
                        );
                    });

                    // Subtle scale effect for expert images
                    const expertImages = document.querySelectorAll('.expert-image img');
                    expertImages.forEach(img => {
                        gsap.fromTo(img,
                            { scale: 1 },
                            {
                                scale: 1.15,
                                scrollTrigger: {
                                    trigger: img.parentElement.parentElement,
                                    start: "top bottom",
                                    end: "bottom top",
                                    scrub: 2, // Smoother scrubbing for more elegant motion
                                    toggleActions: "play none none reverse"
                                }
                            }
                        );
                    });

                    // Elegant parallax for CTA image
                    const ctaImage = document.querySelector('.cta-image img');
                    if (ctaImage) {
                        gsap.fromTo(ctaImage,
                            { y: -30 },
                            {
                                y: 30,
                                scrollTrigger: {
                                    trigger: ctaImage.parentElement,
                                    start: "top bottom",
                                    end: "bottom top",
                                    scrub: 2,
                                    toggleActions: "play none none reverse"
                                }
                            }
                        );
                    }

                    // Optional: Subtle parallax for hero section background
                    const heroSection = document.querySelector('.hero-section');
                    if (heroSection) {
                        gsap.fromTo(heroSection,
                            { backgroundPosition: "50% 0%" },
                            {
                                backgroundPosition: "50% 20%",
                                ease: "none",
                                scrollTrigger: {
                                    trigger: heroSection,
                                    start: "top top",
                                    end: "bottom top",
                                    scrub: 1,
                                    toggleActions: "play none none reverse"
                                }
                            }
                        );
                    }
                });

                document.addEventListener('DOMContentLoaded', function () {
                    // Function to check if element is in viewport
                    function isInViewport(element) {
                        const rect = element.getBoundingClientRect();
                        return (
                            rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
                            rect.bottom >= 0
                        );
                    }

                    // Function to animate experts when they come into view
                    function animateExpertsOnScroll() {
                        const expertsSection = document.querySelector('.experts-section');
                        const expertCards = document.querySelectorAll('.expert-card');

                        if (isInViewport(expertsSection)) {
                            expertCards.forEach((card, index) => {
                                // Stagger the animations
                                setTimeout(() => {
                                    card.style.opacity = '1';
                                    card.style.transform = 'translateY(0)';
                                }, 150 * index);
                            });

                            // Remove scroll listener once animation is done
                            window.removeEventListener('scroll', animateExpertsOnScroll);
                        }
                    }

                    // Add initial styles for animation
                    const expertCards = document.querySelectorAll('.expert-card');
                    expertCards.forEach(card => {
                        card.style.opacity = '0';
                        card.style.transform = 'translateY(30px)';
                        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    });

                    // Check on load and scroll
                    animateExpertsOnScroll();
                    window.addEventListener('scroll', animateExpertsOnScroll);

                    // Optional: Add hover animation for expert images
                    expertCards.forEach(card => {
                        const image = card.querySelector('.expert-image');

                        card.addEventListener('mouseenter', () => {
                            image.style.transform = 'scale(1.05)';
                        });

                        card.addEventListener('mouseleave', () => {
                            image.style.transform = 'scale(1)';
                        });
                    });
                });
            </script>
        </body>

